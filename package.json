{
  "name": "prolibu-salesforce-webhook",
  "version": "1.0.0",
  "description": "Microservicio para sincronizar webhooks de Prolibu con Salesforce Opportunities",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:salesforce": "node test-salesforce-connection.js",
    "verify:field": "node verify-custom-field.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "prepare": "husky install"
  },
  "keywords": [
    "webhook",
    "prolibu",
    "salesforce",
    "microservice",
    "node.js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsforce": "^3.10.4",
    "pino": "^8.15.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
